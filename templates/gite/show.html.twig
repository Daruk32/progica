{% extends "base.html.twig" %}

{% block title %}
    {{ gite.nom }}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    {{ gite.nom }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            {{ gite.description }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <table class="table">
                    <tr>
                        <th>Surface</th>
                        <td>{{ gite.surface }} mÂ² </td>
                    </tr>
                    <tr>
                        <th>Chambre</th>
                        <td>{{ gite.chambre }}</td>
                    </tr>
                    <tr>
                        <th>Couchage</th>
                        <td>{{ gite.couchage }}</td>
                    </tr>
            </table>
        </div>

        <div class="col-md-6">
            <h2>Equipement</h2>
            <table class="table">
                {% for equipement in gite.equipements %}
                    <tr>
                        <td>{{ equipement.name }} </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                {% for user in gite.users %}
                    <tr>
                        <td>{{ user.username }} </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    
{% endblock %}